

    <section>
    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 " >
                <div class="card align-items-center" style="width: 15rem;height:23rem">
                    <img class="card-img-top" style="height: 150px;width:160px ;border-width: 0ch;" src="/images/{{this._id}}.jpg">
                        <div class="card-body">
                              <h5 class="card-title">{{this.name}}</h5>
                             <p class="card-text">{{this.description}}</p>
                             <p class="card-text">Rs.{{this.price}}</p>
                
                             <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                 
                        </div>
                
                
                </div>
            </div>
            {{/each}}
            
            
        </div>

    </div>
    </section>
