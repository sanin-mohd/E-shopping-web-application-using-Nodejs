
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form action="/admin/edit-products/{{product._id}}" method="post" role="form" enctype="multipart/form-data">
                <legend class="text-center">Edit Product details</legend>

                <div class="form-group">
                    <label for="name">Product Title</label>
                    <input type="text" class="form-control" name="name" id="name" value="{{product.name}}">
                </div>

                <div class="form-group">
                    <label for="category">Product category</label>
                    <input type="text" class="form-control" name="category" id="" value="{{product.category}}">
                </div>

                <div class="form-group">
                    <label for="description">Product discription</label>
                    <input type="text" class="form-control" name="description" id="" value="{{product.description}}">
                </div>

                <div class="form-group">
                    <label for="image">Image</label>
                    <img src="/images/{{product._id}}.jpg" style="width: 100px; height:auto" alt="" id="newImage">
                    <input type="file" class="" name="image" id="" value="" onchange="viewImage(event)">
                </div>

                <div class="form-group">
                    <label for="price">Product Price</label>
                    <input type="number" class="form-control" name="price" id=""value="{{product.price}}">
                </div>

                <button type="submit" href="/admin" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<script>
    function viewImage(event){
        document.getElementById('newImage').src=URL.createObjectURL(event.target.files[0])
    }
</script>